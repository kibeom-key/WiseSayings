<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="Base.Theme.WiseSayings" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="android:fitsSystemWindows">true</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_110f61</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="android:textColorPrimary">@color/color_110f61</item>
        <item name="android:textColorSecondary">@color/color_110f61</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white</item>


    </style>


    <style name="Base.Theme.WiseSayings.ActionBar">
        <item name="background">@color/white</item>

        <item name="tabTextAppearance">@style/TabText</item>
        <item name="tabTextColor">@color/color_b8b7c9</item>
        <item name="tabSelectedTextColor">@color/color_110f61</item>

        <item name="tabIndicatorColor">@color/color_110f61</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabIndicatorFullWidth">false</item>
    </style>

    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">19dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/nanum_square_otf_extra_bold</item>
    </style>


    <!-- Base application theme. -->
    <style name="Theme.Quotes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="ThemeOverlay.Quotes.AppWidgetContainer" parent="">
        <item name="appWidgetBackgroundColor">@color/light_blue_600</item>
        <item name="appWidgetTextColor">@color/light_blue_50</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>


    <!-- WS ActionBar -->
    <style name="Theme.WiseSayings.ActionBar" parent="">
        <item name="background">@color/white</item>
        <item name="colorControlNormal">?android:attr/textColorPrimary</item>
        <item name="searchViewStyle">@style/Widget.AppCompat.SearchView.ActionBar</item>
    </style>


</resources>